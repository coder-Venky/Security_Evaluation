<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>activate</servlet-name>
        <servlet-class>action.activate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deactivate</servlet-name>
        <servlet-class>action.deactivate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>user_login</servlet-name>
        <servlet-class>action.user_login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>upload_file</servlet-name>
        <servlet-class>action.upload_file</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>download</servlet-name>
        <servlet-class>action.download</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>spam_filter</servlet-name>
        <servlet-class>action.spam_filter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>activate</servlet-name>
        <url-pattern>/activate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deactivate</servlet-name>
        <url-pattern>/deactivate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>user_login</servlet-name>
        <url-pattern>/user_login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>upload_file</servlet-name>
        <url-pattern>/upload_file</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>download</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>spam_filter</servlet-name>
        <url-pattern>/spam_filter</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
